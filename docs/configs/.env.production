# =============================================================================
# EXARTH COMPANY SITE - Production Environment
# =============================================================================
# WARNING: Update all values before deploying to production
# NEVER commit this file with real credentials to version control
# =============================================================================

# Django Core Settings
DEBUG=False
SECRET_KEY=generate-a-strong-secret-key-for-production
ENVIRONMENT=server
SITE_ID=1

# Domain Settings
DOMAIN=exarth.com
PROTOCOL=https
ALLOWED_HOSTS=exarth.com,www.exarth.com

# Database Settings (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=exarth_company_site_prod
DB_USER=exarth_user
DB_PASS=strong-database-password-here
DB_HOST=localhost
DB_PORT=5432

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@exarth.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@exarth.com

# Mailchimp Settings
MAILCHIMP_API_KEY=your-production-mailchimp-api-key
MAILCHIMP_FROM_EMAIL=noreply@exarth.com
